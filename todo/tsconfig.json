{
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": "./src",
        "paths": {
            "@interfaces/*": ["./interfaces/*"],
            "@models/*": ["./models/*"],
            "@services/*": ["./services/*"]
        },
        "sourceMap": false,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es2020",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
