{
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": "./src",
        "sourceMap": false,
        "module": "commonjs",
        "target": "es2020",
        "moduleResolution": "node",
        //"allowJs": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "strict": false,
        "noEmitOnError": true,
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}

